<div class="container" style="margin-top: 100px">
    <form>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Vorname</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Benutzername</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label>Passwort</label>
                <input type="password" class="form-control">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Ort</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label>Land</label>
                <select class="form-control">
                    <option selected>Schweiz</option>
                    <option>Deutschland</option>
                    <option>Österreich</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label">Ich möchte Werbung erhalten!</label>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Senden</button>
        <a class="btn btn-primary" href="#" role="button">Senden</a>
        <button class="btn btn-secondary" type="submit">Senden</button>
        <input class="btn btn-danger" type="button" value="Senden">
        <input class="btn btn-warning" type="submit" value="Senden">
        <input class="btn btn-info" type="reset" value="Senden">
    </form>
</div>