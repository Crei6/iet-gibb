<div class="container" style="margin-top: 100px">
    <%= form_with model: @song do |f| %>
        <table class="table">
            <thead class="thead-light">
				<tr>
					<th colspan="2">
                        <%= @title %>
                    </th>
				</tr>
			</thead>
            <tbody>
                <tr>
                    <td><p>Album:</p></td>
                    <td><%= f.collection_select :album_id, @albums, :id, :title %></td>
                </tr>
                <tr>
                    <td><p>Titel:</p></td>
                    <td><%= f.text_field :title %></td>
                </tr>
                <tr>
                    <td><p>Dauer in Sekunden:</p></td>
                    <td><%= f.text_field :duration %></td>
                </tr>
            </tbody>
        </table>
        <%= submit_tag "Song speichern" %>
        <%= link_to "Abbrechen", songs_path %>
  	<% end %>
</div>