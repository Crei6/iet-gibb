<div class="container" style="margin-top: 100px">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Band</th>
                <th>Album</th>
                <th>Nr.</th>
                <th>Titel</th>
                <th colspan="3">Dauer</th>
            </tr>
        </thead>
        <tbody> 
            <% @songs.each do |s| %> 
                <tr> 
                    <td><%= s.album.band %></td>
                    <td><%= s.album.title %></td> 
                    <td><%= s.position %></td> 
                    <td><%= link_to s.title, song_path(s.id) %></td>
                    <td><%= s.duration %></td>
                    <td><%= link_to "Ändern", edit_song_path(s.id) %></td> 
                    <td><%= link_to "Löschen", song_path(s.id), method: :delete, data: { confirm: "Sind Sie sicher?" } %></td> 
                </tr> 
            <% end %> 
        </tbody>
    </table>
    <%= link_to "Neuen Song erfassen", new_song_path %>
    <br />
    <%= link_to "Alben", albums_path %>
</div>