<% if post.is_liked(current_user).present? %>
  <%= link_to "", like_path(post.is_liked(current_user)), method: :delete, remote: true, class: "fas fa-heart fa-2x icon-red icon-spacer" %>
<% else %>
  <%= link_to "", post_likes_path(post), method: :post, remote: true, class: "far fa-heart fa-2x icon-gray icon-spacer" %>
<% end %>